modules = ["python-3.12", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[userenv]

[userenv.shared]
SECRET_KEY = "stockmaster-secret-key-change-in-production-for-security-purposes-minimum-32-characters"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StockMaster App"

[[workflows.workflow]]
name = "StockMaster App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn app:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37895
externalPort = 3001

[[ports]]
localPort = 46203
externalPort = 3000

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "rustc"]
